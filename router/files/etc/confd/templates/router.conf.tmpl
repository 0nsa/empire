# Generated from /etc/confd/templates/router.conf.tmpl
{{range $dir := lsdir "/services/web"}} {{with $app := base $dir}}
# App {{$app}}
upstream {{$app}} {
    least_conn;
    {{$webdir := printf "/services/web/%s/*" $dir}}{{range gets $webdir}}
    server {{.Value}};
    {{end}}
}

server {
    listen 80;
    {{$serverNames := print $app ".*"}}
    {{$domaindir := printf "/empire/domains/%s" $app}}
    # domaindir: {{$domaindir}}
    {{ $doms := ls $domaindir }}
    {{ $domString := join $doms " " }}
    {{ $serverNames := print $serverNames " " $domString }}
    server_name {{$serverNames}};
  
    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Client-IP $remote_addr;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://{{$app}};
    }
}
## End {{$app}}
{{end}} {{end}}
