#!/bin/bash

set -e

gh() {
  #github-release "$@"
  echo "$@"
}

user=$CIRCLE_PROJECT_USERNAME
repo=$CIRCLE_PROJECT_REPONAME

gh release \
    --user ${user} \
    --repo ${repo} \
    --tag ${tag}

for f in "$@"; do
  gh upload \
    --user ${user} \
    --repo ${repo} \
    --tag ${tag} \
    --name $(basename $f) \
    --file $f
done
